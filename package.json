{
  "name": "reactive",
  "version": "0.0.3",
  "author": "Simen Brekken <simen@unfold.no>",
  "description": "React client/server example",
  "license": "MIT",
  "engines": {
    "node": "0.10.x"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/unfold/reactive"
  },
  "main": "server.js",
  "browser": "./client.js",
  "browserify": {
    "transform": [
      "reactify"
    ]
  },
  "scripts": {
    "start": "node server",
    "test": "npm run test-server && npm run test-client",
    "test-server": "node_modules/.bin/mocha --reporter spec test/server/*.js",
    "test-build-client": "node test/support/build-client-test-bundle > test/support/client.bundle.js",
    "test-client": "npm run test-build-client && node_modules/.bin/mocha-phantomjs test/index.html"
  },
  "dependencies": {
    "express": "^3.4.8",
    "fibers": "^1.0.1",
    "node-jsx": "^0.9.0",
    "react": "0.9.0",
    "react-async": "^0.5.0",
    "reactify": "^0.8.1",
    "superagent": "^0.16.0",
    "url-pattern": "^0.4.0",
    "watchify": "^0.6.1"
  },
  "devDependencies": {
    "browserify": "^3.31.2",
    "chai": "^1.9.0",
    "mocha": "^1.17.1",
    "mocha-phantomjs": "^3.3.2",
    "phantomjs": "^1.9.7-1",
    "sinon": "^1.8.2",
    "supertest": "^0.9.0"
  }
}
